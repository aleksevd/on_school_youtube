tr
  td
    .btn-group-vertical role="group"
      = link_to [:edit, :admin, teacher], class: 'btn btn-primary btn-sm' do
        span.glyphicon.glyphicon-pencil aria-hidden="true"
      = link_to [:admin, teacher], class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Действительно хотите удалить?' } do
        span.glyphicon.glyphicon-trash aria-hidden="true"
  td= teacher.first_name
  td= teacher.last_name
  td= teacher.description
